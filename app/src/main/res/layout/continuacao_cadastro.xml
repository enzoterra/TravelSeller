<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContinuacaoCadastro">

    <ScrollView
        android:id="@+id/layoutContinuacaoCadastro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Título-->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="    Novo Cadastro    "
                android:textAlignment="center"
                android:textColor="@color/green_cadastro"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Dados do Voo "
                android:textAlignment="center"
                android:textColor="#106A77"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


            <!--Localizador-->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Localizador:"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/ETlocalizador"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white_gray"
                android:hint="Ex. 000000"
                android:inputType="textCapCharacters"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <!--Numero da Venda-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Número da Venda:"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/ETvenda"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/white_gray"
                android:hint="Ex. 00000000"
                android:inputType="number"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />


            <!--Embarque-->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Ida"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ETvenda" />


            <!--Data Embarque-->
            <TextView
                android:id="@+id/textViewDataEmbarque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Data:"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/ETdataEmbarque"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/white_gray"
                android:hint="00/00/0000"
                android:inputType="date"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataEmbarque" />


            <!--Hora Embarque-->
            <TextView
                android:id="@+id/textViewHoraEmbarque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Horário:"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ETdataEmbarque"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/EThoraEmbarque"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/white_gray"
                android:hint="00:00"
                android:inputType="time"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toEndOf="@+id/ETdataEmbarque"
                app:layout_constraintTop_toBottomOf="@+id/textViewHoraEmbarque" />


            <!--Desembarque-->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Volta"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EThoraEmbarque" />


            <!--Data Desembarque-->
            <TextView
                android:id="@+id/textViewDataDesembarque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/edge_distance"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Data:"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/ETdataDesembarque"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/edge_distance"
                android:backgroundTint="@color/white_gray"
                android:hint="00/00/0000"
                android:inputType="date"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDataDesembarque" />

            <!--Hora Desembarque-->
            <TextView
                android:id="@+id/textViewHoraDesembarque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/montserrat"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4sp"
                android:text="Horário:"
                android:textAlignment="center"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ETdataDesembarque"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/EThoraDesembarque"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/white_gray"
                android:hint="00:00"
                android:inputType="time"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toEndOf="@+id/ETdataDesembarque"
                app:layout_constraintTop_toBottomOf="@+id/textViewHoraDesembarque" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonContinuarContinuacaoCadastro"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/oval"
        android:elevation="1dp"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:text="Continuar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonCancelarContinuacaoCadastro"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/oval_gray"
        android:elevation="1dp"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:text="Voltar"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>