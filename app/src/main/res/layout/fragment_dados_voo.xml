<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DadosVooFragmento"
    android:id="@+id/fragmentoDadosVoo">

    <!--Dados do Cliente-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Dados do Voo "
        android:textAlignment="center"
        android:textColor="#106A77"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <!--Cidade-->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edge_distance"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/montserrat"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="4sp"
            android:text="Cidade:"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/ETcidadeFragment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edge_distance"
            android:backgroundTint="@color/white_gray"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


    <!--Hotel-->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Hotel:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETcidadeFragment" />

    <EditText
        android:id="@+id/EThotelFragment"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_gray"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/edge_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <!--Localizador-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Localizador:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EThotelFragment" />

    <!--Localizador-->
    <EditText
        android:id="@+id/ETlocalizadorFragment"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:backgroundTint="@color/white_gray"
        android:inputType="textCapCharacters"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />


    <!--Numero da Venda-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Número da Venda:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompanhiaAerea" />

    <!--Numero da Venda-->
    <EditText
        android:id="@+id/ETvendaFragment"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white_gray"
        android:inputType="number"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompanhiaAerea" />


    <!--Companhia Aerea-->
    <TextView
        android:id="@+id/textViewCompanhiaAerea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Companhia Aérea:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/ETcompanhiaAerea"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white_gray"
        android:inputType="textCapWords"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/textViewCompanhiaAerea"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <!--Embarque-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Ida"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETvendaFragment" />

    <!--Data Embarque-->
    <TextView
        android:id="@+id/textViewDataEmbarque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Data:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <!--Data Embarque-->
    <EditText
        android:id="@+id/ETdataEmbarqueFragment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="@dimen/edge_distance"
        android:backgroundTint="@color/white_gray"
        android:hint="00/00/0000"
        android:inputType="date"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDataEmbarque" />

    <!--Hora Embarque-->
    <TextView
        android:id="@+id/textViewHoraEmbarque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Horário:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ETdataEmbarqueFragment"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <!--Data Embarque-->
    <EditText
        android:id="@+id/EThoraEmbarqueFragment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:backgroundTint="@color/white_gray"
        android:hint="00:00"
        android:textAlignment="textStart"
        android:inputType="time"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/ETdataEmbarqueFragment"
        app:layout_constraintTop_toBottomOf="@+id/textViewHoraEmbarque" />


    <!--Desembarque-->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Volta"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EThoraEmbarqueFragment" />

    <!--Data Desembarque-->
    <TextView
        android:id="@+id/textViewDataDesembarque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edge_distance"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Data:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <!--Data Desembarque-->
    <EditText
        android:id="@+id/ETdataDesembarqueFragment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/edge_distance"
        android:backgroundTint="@color/white_gray"
        android:hint="00/00/0000"
        android:inputType="date"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDataDesembarque" />

    <!--Hora Desembarque-->
    <TextView
        android:id="@+id/textViewHoraDesembarque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/transparent"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4sp"
        android:text="Horário:"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ETdataDesembarqueFragment"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <!--Data Desembarque-->
    <EditText
        android:id="@+id/EThoraDesembarqueFragment"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:backgroundTint="@color/white_gray"
        android:hint="00:00"
        android:inputType="time"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/ETdataDesembarqueFragment"
        app:layout_constraintTop_toBottomOf="@+id/textViewHoraDesembarque" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>